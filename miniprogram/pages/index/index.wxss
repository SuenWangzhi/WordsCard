/* pages/indexa/indexa.wxss */
page{
  background: #ffffff;
}
.todayDate{
  width: 100%;
  height: 130rpx;
  background-color: #f6f6f6;
  text-align: center;
  line-height: 80rpx;
}
.blur{ 
    filter: blur(50rpx);
}
.chooseModel{
  display: flex;
  width: 530rpx;
  height: 70rpx;
  background-color: #ffffff;
  border-radius: 45rpx;
  margin: 30rpx auto;
  justify-content:space-evenly ;
  overflow: hidden;
  line-height: 70rpx;
  box-shadow: 2rpx 2rpx 10rpx #cccccc;
}
.current{
background-color: #2589FF;
color: #fff;
box-shadow: 0 0 10rpx #d7e4f3;
}
.model{
  width:265rpx ;
}
.container{
  width:750rpx ;
  flex-direction: row;
  height:4520rpx;
  /* height:2280rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  align-content: flex-start;
}
.box{
  background: #000;
  width:320rpx ;
  height: 400rpx;
  box-sizing: border-box;
  box-shadow: 0 5px 18rpx #aaa;
  border-radius: 30rpx;
  position: relative;
  margin-top: 45rpx;
}
@keyframes swipe{
  0%{
    transform: scale(1, 1);
  }
  17%{
    transform: scale(1.06, 1.06);
  }
  34%{
    transform: scale(1.03, 1.03);
  }
  50%{
    transform: scale(1.09, 1.09);
  }
  67%{
    transform: scale(1.02, 1.02);
  }
  84%{
    transform: scale(1.04, 1.04);
  }
  100%{
    transform: scale(1, 1);
  }
}
.box:hover{
  animation: swipe .5s ;
}
.meanPic{
  width: 200rpx;
  height: 200rpx;
  line-height: 160rpx;
  font-size:50rpx;
  font-weight: 900;
  margin:30rpx 60rpx;
  border-radius: 10rpx;
}
.question{
  width: 120rpx;
  height: 100rpx;
  position: absolute;
  z-index: 999;
  left: 100rpx;
