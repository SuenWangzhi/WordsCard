page {
  background-color: #fff;
} 
swiper-item>view{
  width:710rpx;
  padding-top:40rpx ;
}
.img-container{
  width: 600rpx;
  height: 600rpx;
  overflow: hidden;
  box-shadow:2rpx 0rpx 10rpx #888;
  border: solid #666 1rpx;
  border-radius: 20rpx;
  position: relative;
}
swiper-item .card{
  width: 600rpx;
  height: 600rpx;
  display: block;
  border-radius: 20rpx;
  position: absolute;
}
.rember-play{
  display: flex;
  justify-content: space-between;
  width: 600rpx;
  height: 150rpx;
  align-items: center;
  margin-top: 6rpx;
  overflow: hidden;
}
.play image{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  box-shadow:0rpx 1rpx 6rpx #eee;
}
.remenber,.mean{
  width: 200rpx;
  height: 66rpx;
  color: #ffffff;
  font-weight: 600;
  line-height: 66rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
  box-shadow: 0 2rpx 8rpx #666;
  border:10rpx solid #ffffff;
  background-color: #FF0033;
}
.remenber{
  border-radius: 8rpx 43rpx 43rpx 8rpx;
}
.mean{
  border-radius: 43rpx 8rpx 8rpx 43rpx;
}
.remenber image,.mean image{
  width:50rpx;
  height:50rpx;
  margin: 10px;
}
.wordEn{
  width: 600rpx;
  text-align: center;
  font-size: 100rpx;
  font-weight: 600;
  color: white;
}
