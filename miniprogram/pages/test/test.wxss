/* pages/test/test.wxss */
.container{
  width: 700rpx;
  height: 800rpx;
  margin: 50rpx 25rpx;
  border-radius: 70rpx;
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  justify-content: space-evenly;
  align-content: flex-start;
}
.option{
  width: 300rpx;
  height: 300rpx;
  border-radius: 25rpx;
  margin-top: 50rpx;
  overflow: hidden;
}
.option image{
  width: 300rpx;
  height: 375rpx;
  margin-top:-33rpx;
  border-radius: 15rpx;
}
.wordEn{
  width: 700rpx;
  height: 180rpx;
  line-height: 150rpx;
  margin-left: 25rpx;
  background-color: #ffffff;
  text-align: center;
  font-size: 100rpx;
  font-weight: 600;
  border-radius: 15rpx;
  box-shadow: 1rpx 2rpx 8rpx #888;
}